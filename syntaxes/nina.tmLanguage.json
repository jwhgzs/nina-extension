{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "nina",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#strings2" },
		{ "include": "#comments" },
		{ "include": "#comments2" },
		{ "include": "#numbers" },
		{ "include": "#specials" },
		{ "include": "#specials2" },
		{ "include": "#整活" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.nina",
					"match": "((^|(?<=[\\w_$\\s;\\{\\}\\[\\]\\(\\)]))(;)((?=[\\w_$\\s;\\{\\}\\[\\]\\(\\)])))|(\\b(if|如果|else|否则|elseif|否则如果|while|循环|return|返回|break|退出循环|continue|继续循环|func|函数|var|变量|const|常量|try|尝试|catch|捕捉|with|应用)\\b)"
				},
				{
					"name": "keyword.operator",
					"match": "((^|(?<=[\\w_$\\s;\\{\\}\\[\\]\\(\\)]))(\\+|\\-|\\*|\\/|%|\\*\\*|\\&|\\&\\&|\\||\\|\\||\\!|~|=|==|=\\>|\\!=|\\>|\\<|\\>=|\\<=|\\<\\<|\\>\\>|,|\\.|@|\\^|\\?|:)(?=[\\w_$\\s;\\{\\}\\[\\]\\(\\)]))|(\\b(typeof|取类型|array|新数组|object|新对象)\\b)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nina",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.nina",
					"match": "\\\\(n|t|\"|')"
				}
			]
		},
		"strings2": {
			"name": "string.quoted.single.nina",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.nina",
					"match": "\\\\(n|t|\"|')"
				}
			]
		},
		"comments": {
			"name": "comment.line",
			"begin": "\\/\\/",
			"end": "$"
		},
		"comments2": {
			"name": "comment.block",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "\\b([0-9]+(\\.[0-9]+){0,1})\\b"
		},
		"specials": {
			"name": "markup.changed",
			"match": "\\b(null|true|false|this|self|argument|exception|type)\\b"
		},
		"specials2": {
			"name": "markup.italic",
			"match": "\\b(eval|throw|number|string|console_print|console_printf|console_read|exit)\\b"
		},
		"整活": {
			"name": "markup.bold",
			"match": "\\b(nina|jwh|谭镇洋)\\b"
		}
	},
	"scopeName": "source.nina"
}